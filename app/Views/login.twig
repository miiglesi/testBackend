{% extends 'partials/layout.twig' %}
{% block content %}
    <h2>Login</h2>{{ app.request.post('username') }}
    {% include 'partials/error.twig' %}
    <form action="" method="post" autocomplete="new-password">
        <div class="form-group">
            <label for="email">Usuario:</label>
            <input type="text" name="username" id="username" placeholder="Usuario (requerido)" class="form-control" autocomplete="new-password" value="{{ POST.username}}" >
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" name="password" id="password" placeholder="Password (requerido)" class="form-control" autocomplete="new-password">
        </div>
        <input type="hidden" name="referer" value="{{ GET.referer }}">
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
{% endblock %}